<Window x:Class="PBL4.View.GiaoDienChinh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBL4.View"
        mc:Ignorable="d"
        Title="GiaoDienChinh" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"> </RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label
                Content="{Binding StateServer}"
                Height="30"
                Width="30"> 
                
            </Label>
            
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                <Button  HorizontalAlignment="Center" 
                    Margin="20"
                    Width="{StaticResource ButtonWidth}" 
                    Height="{StaticResource ButtonHeight}" 
                    Style="{StaticResource Button1}"
                    Content="Load Server"
                    Command="{Binding StartServerCommand}">
                </Button>
                <Button
                    HorizontalAlignment="Center"
                    Width="{StaticResource ButtonWidth}"
                    Height="{StaticResource ButtonHeight}"
                    Content="Load Video"
                    Command="{Binding StartVideoCommand}">
                </Button>
            </StackPanel>

        </Grid>
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Cameras}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="{Binding CamId}" 
                                       FontWeight="Bold" 
                                       Foreground="DarkBlue" 
                                       Margin="0,0,0,5"/>
                            <Image Source="{Binding Image}" 
                                   Width="400" 
                                   Height="250" 
                                   Stretch="Uniform" 
                                   Margin="0,0,0,20"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
