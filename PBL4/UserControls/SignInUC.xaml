<UserControl x:Class="PBL4.UserControls.SignInUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBL4.Helper"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ViewModel="clr-namespace:PBL4.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,25,0,0" Grid.Column="1">
            <Image Source="/Images/user-64.png" Width="60" Height="60">

            </Image>
        </Grid>
        <Grid  HorizontalAlignment="Left" Width="300" Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
                <TextBox
                 Text="{Binding Username,Mode=TwoWay}"
                 Style="{StaticResource Textbox1}"
                 VerticalAlignment="Center"
                 materialDesign:HintAssist.Hint="Username"
                 Width="200"
                 Height="50"
                 Margin="0,10" />
                <PasswordBox
                 local:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                 Style="{StaticResource Passwordbox1}"
                 Margin="0,10,0,0"
                 VerticalAlignment="Center"
                 materialDesign:HintAssist.Hint="Password"/>
                <Button
                   Width="{StaticResource ButtonWidth}" 
                   Height="{StaticResource ButtonHeight}" 
                   Margin="0,20,0,0"
                   Command="{Binding LoginCommand}"
                   Content="Đăng nhập"
                   Style="{StaticResource Button1}" 
                 />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
