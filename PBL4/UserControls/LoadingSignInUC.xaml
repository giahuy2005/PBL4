<UserControl x:Class="PBL4.UserControls.LoadingSignInUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="clr-namespace:WpfAnimatedGif;assembly=WpfAnimatedGif"
             xmlns:local="clr-namespace:PBL4.UserControls"
             xmlns:ViewModel="clr-namespace:PBL4.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"> </RowDefinition>
            <RowDefinition> </RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Image gif:ImageBehavior.AnimatedSource="/Images/loading.gif"
                  Width="160" Height="100"
                  Stretch="Uniform"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <TextBlock Text="{Binding LoadingMessage}"
                 Foreground="{StaticResource DesignForegroundTextBlock}"
                 FontSize="14"
                 FontWeight="DemiBold"
                 HorizontalAlignment="Center"
                 Margin="0,15,0,0"/>
        </Grid>
    </Grid>
</UserControl>
